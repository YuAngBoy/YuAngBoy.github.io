<aside id="sidebar-author">
    <div class="panel panel-gal" data-aos="flip-right" data-aos-duration="3000">
        <div class="panel-heading" style="text-align: center">
            <i class="fa fa-quote-left"></i>
            <%= config.author %>
            <i class="fa fa-quote-right"></i>
        </div>
        <div class="author-panel text-center">
            <img src="<%- url_for(/https?:\/\//.test(theme.author_image) ? theme.author_image : `imgs/${theme.author_image}`) %>" width="140" height="140"
                 alt="个人头像" class="author-image">
            <p class="author-description"><%- markdown(config.description) %></p>
        </div>
        <iframe frameborder="no" border="0" marginwidth="0" marginheight="0" width=360 height=86 src="//music.163.com/outchain/player?type=2&id=3932159&auto=0&height=66"></iframe>
    </div>
</aside>